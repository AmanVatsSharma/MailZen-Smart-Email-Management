generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum InboxType {
  MAILBOX
  PROVIDER
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  // Password may be null for OAuth-only accounts (Google login, etc.)
  password  String?
  name      String?
  role      String   @default("USER")
  isEmailVerified  Boolean  @default(false)
  phoneNumber       String?
  isPhoneVerified   Boolean  @default(false)
  failedLoginAttempts Int   @default(0)
  lastLoginAt       DateTime?
  lastFailedLoginAt DateTime?
  lockoutUntil      DateTime?
  passwordUpdatedAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  contacts  Contact[]
  emails    Email[]
  providers EmailProvider[]
  externalMessages ExternalEmailMessage[]
  filters   EmailFilter[]
  folders   EmailFolder[]
  labels    EmailLabel[]
  externalLabels ExternalEmailLabel[]
  templates Template[]

  sessions           UserSession[]
  verificationTokens VerificationToken[]
  auditLogs          AuditLog[]
  mailboxes          Mailbox[]
  phoneVerifications PhoneVerification[]

  /// OAuth subject for Google Sign-In (stable per Google account)
  googleSub          String?  @unique

  /// Persisted inbox selection for multi-inbox switching
  activeInboxType    InboxType?
  activeInboxId      String?
}

model Contact {
  id        String   @id @default(uuid())
  name      String
  email     String
  phone     String?
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Email {
  id          String   @id @default(uuid())
  subject     String
  body        String
  from        String
  to          String[]
  status      String   @default("DRAFT")
  isImportant Boolean  @default(false)
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  providerId  String?
  provider    EmailProvider? @relation(fields: [providerId], references: [id])
  folderId    String?
  folder      EmailFolder? @relation(fields: [folderId], references: [id])
  labels      EmailLabelAssignment[]
  attachments Attachment[]
  scheduledAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  analytics   EmailAnalytics?
}

model EmailProvider {
  id          String   @id @default(uuid())
  type        String   // GMAIL, OUTLOOK, CUSTOM_SMTP
  email       String
  /// Human-friendly display name (e.g. "Gmail - user@gmail.com")
  displayName String?
  /// Whether this provider is currently the selected/active external inbox
  isActive    Boolean  @default(false)
  /// Last time we successfully synced/pulled messages for this provider
  lastSyncedAt DateTime?
  /// Connection/sync status for UI ("connected" | "syncing" | "error" | "disconnected")
  status      String   @default("connected")
  host        String?
  port        Int?
  password    String?
  accessToken String?
  refreshToken String?
  tokenExpiry DateTime?
  /// Gmail incremental sync cursor (historyId) for future optimizations
  gmailHistoryId String?
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  emails      Email[]
  warmup      EmailWarmup?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  externalMessages ExternalEmailMessage[]
  externalLabels   ExternalEmailLabel[]
}

/// Provider-owned label metadata (Gmail system + user labels).
/// Used to render label names/colors in the unified inbox UI.
model ExternalEmailLabel {
  id              String   @id @default(uuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id])

  providerId      String
  provider        EmailProvider @relation(fields: [providerId], references: [id])

  /// Provider label id (e.g. Gmail label id: INBOX, STARRED, or a custom id)
  externalLabelId String
  name            String
  /// Gmail: \"system\" | \"user\"
  type            String
  /// Optional UI color (hex string)
  color           String?  @default(\"#4F46E5\")
  isSystem        Boolean  @default(false)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([providerId, externalLabelId])
  @@index([userId])
  @@index([providerId])
}

/// Inbound/received messages synced from external providers (Gmail first).
model ExternalEmailMessage {
  id                String   @id @default(uuid())
  userId            String
  user              User     @relation(fields: [userId], references: [id])

  providerId        String
  provider          EmailProvider @relation(fields: [providerId], references: [id])

  externalMessageId String
  threadId          String?

  from              String?
  to                String[]
  subject           String?
  snippet           String?
  internalDate      DateTime?
  labels            String[]
  rawPayload        Json?

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@unique([providerId, externalMessageId])
  @@index([userId])
  @@index([providerId])
}

model EmailAnalytics {
  id         String   @id @default(uuid())
  emailId    String   @unique
  email      Email    @relation(fields: [emailId], references: [id])
  openCount  Int      @default(0)
  clickCount Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model EmailFilter {
  id        String   @id @default(uuid())
  name      String
  rules     Json     // Array of EmailFilterRule
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model EmailFolder {
  id        String   @id @default(uuid())
  name      String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  emails    Email[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model EmailLabel {
  id        String   @id @default(uuid())
  name      String
  color     String   @default("#4F46E5")
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  emails    EmailLabelAssignment[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model EmailLabelAssignment {
  id        String     @id @default(uuid())
  emailId   String
  email     Email      @relation(fields: [emailId], references: [id])
  labelId   String
  label     EmailLabel @relation(fields: [labelId], references: [id])
  createdAt DateTime   @default(now())

  @@unique([emailId, labelId])
}

model Template {
  id        String   @id @default(uuid())
  name      String
  subject   String
  body      String
  metadata  Json?    @default("{}")
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Feature {
  id        String   @id @default(uuid())
  name      String   @unique
  isActive  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Attachment {
  id          String   @id @default(uuid())
  filename    String
  contentType String
  size        Int?
  url         String   // Cloud storage URL
  emailId     String
  email       Email    @relation(fields: [emailId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model EmailWarmup {
  id                String   @id @default(uuid())
  providerId        String   @unique
  provider         EmailProvider @relation(fields: [providerId], references: [id])
  status           String   @default("PENDING") // PENDING, ACTIVE, PAUSED, COMPLETED
  currentDailyLimit Int      @default(5)
  dailyIncrement    Int      @default(5)
  maxDailyEmails    Int      @default(100)
  minimumInterval   Int      @default(15)
  targetOpenRate    Int      @default(80)
  startedAt         DateTime @default(now())
  lastRunAt         DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  activities        WarmupActivity[]
}

model WarmupActivity {
  id          String   @id @default(uuid())
  warmupId    String
  warmup      EmailWarmup @relation(fields: [warmupId], references: [id])
  emailsSent  Int      @default(0)
  openRate    Float    @default(0)
  date        DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([warmupId, date])
}

/// User-owned mailbox at mailzen.com
model Mailbox {
  id            String   @id @default(uuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  localPart     String
  domain        String   @default("mailzen.com")
  email         String   @unique
  status        String   @default("ACTIVE") // ACTIVE, SUSPENDED
  quotaLimitMb  Int      @default(51200) // 50 GB
  usedBytes     BigInt   @default(0)
  // Connection settings for self-hosted server
  smtpHost      String?
  smtpPort      Int?
  imapHost      String?
  imapPort      Int?
  username      String?
  passwordEnc   String?
  passwordIv    String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([localPart, domain])
  @@index([userId])
}

/// Phone OTP verifications
model PhoneVerification {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  phoneNumber String
  code        String
  attempts    Int      @default(0)
  expiresAt   DateTime
  consumedAt  DateTime?
  createdAt   DateTime @default(now())

  @@index([userId])
}

/// Signup OTPs prior to user creation
model SignupVerification {
  id          String   @id @default(uuid())
  phoneNumber String
  code        String
  attempts    Int      @default(0)
  expiresAt   DateTime
  consumedAt  DateTime?
  createdAt   DateTime @default(now())

  @@index([phoneNumber])
}

/// Stores refresh token sessions for JWT rotation and logout
model UserSession {
  id               String   @id @default(uuid())
  userId           String
  user             User     @relation(fields: [userId], references: [id])
  refreshTokenHash String   @unique
  userAgent        String?
  ip               String?
  createdAt        DateTime @default(now())
  expiresAt        DateTime
  revokedAt        DateTime?
  revokedReason    String?

  @@index([userId])
}

/// Tokens for email verification and password reset
model VerificationToken {
  id         String   @id @default(uuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  token      String   @unique
  type       String   // EMAIL_VERIFY | PASSWORD_RESET
  expiresAt  DateTime
  consumedAt DateTime?
  createdAt  DateTime @default(now())

  @@index([userId, type])
}

/// Security/audit logs for auth events and critical actions
model AuditLog {
  id        String   @id @default(uuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  action    String
  metadata  Json?    @default("{}")
  ip        String?
  userAgent String?
  createdAt DateTime @default(now())

  @@index([userId])
}
