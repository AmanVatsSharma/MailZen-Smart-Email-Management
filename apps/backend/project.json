{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "backend",
  "projectType": "application",
  "sourceRoot": "apps/backend/src",
  "targets": {
    "prepare-env": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/ensure-env.js --project backend"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "dependsOn": ["prepare-env"],
      "options": {
        "cwd": "apps/backend",
        "command": "bash -lc 'export NODE_PATH=\"$PWD/node_modules\"; export DATABASE_URL=\"${DATABASE_URL:-postgresql:///mailzen?host=/var/run/postgresql}\"; export PORT=\"${PORT:-4000}\"; export FRONTEND_URL=\"${FRONTEND_URL:-http://localhost:3000}\"; npm run start:dev'"
      }
    },
    "serve:local": {
      "executor": "nx:run-commands",
      "dependsOn": ["prepare-env"],
      "options": {
        "cwd": "apps/backend",
        "command": "bash -lc 'export NODE_PATH=\"$PWD/node_modules\"; export DATABASE_URL=\"${DATABASE_URL:-postgresql:///mailzen?host=/var/run/postgresql}\"; export PORT=\"${PORT:-4000}\"; export FRONTEND_URL=\"${FRONTEND_URL:-http://localhost:3000}\"; npm run start:dev'"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["prepare-env"],
      "options": {
        "cwd": "apps/backend",
        "command": "npm run build"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend",
        "command": "npm run lint"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend",
        "command": "npm run test"
      }
    },
    "test:e2e": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend",
        "command": "npm run test:e2e"
      }
    }
  }
}

