{
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "name": "frontend",
  "projectType": "application",
  "sourceRoot": "apps/frontend",
  "targets": {
    "prepare-env": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/ensure-env.js --project frontend"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "dependsOn": ["prepare-env"],
      "options": {
        "cwd": "apps/frontend",
        "command": "npm run dev"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["prepare-env"],
      "options": {
        "cwd": "apps/frontend",
        "command": "npm run build"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "dependsOn": ["prepare-env"],
      "options": {
        "cwd": "apps/frontend",
        "command": "npm run start"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/frontend",
        "command": "npm run lint"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/frontend",
        "command": "npm run format"
      }
    },
    "format:check": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/frontend",
        "command": "npm run format:check"
      }
    }
  }
}

