{
  "name": "mailzen",
  "version": "1.0.0",
  "description": "MailZen - Email management platform",
  "private": true,
  "scripts": {
    "start": "nx run-many -t serve -p frontend backend --parallel=2",
    "dev": "nx run-many -t serve -p frontend backend --parallel=2",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "dev:frontend": "nx serve frontend",
    "dev:backend": "nx serve backend",
    "build": "nx run-many -t build -p frontend backend",
    "build:frontend": "nx build frontend",
    "build:backend": "nx build backend",
    "lint": "nx run-many -t lint -p frontend backend --parallel=2",
    "format": "nx run-many -t format -p frontend backend --parallel=2",
    "format:check": "nx run-many -t format:check -p frontend backend --parallel=2"
  },
  "keywords": [
    "email",
    "management",
    "nextjs",
    "nestjs"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "nx": "^20.3.1"
  }
}
